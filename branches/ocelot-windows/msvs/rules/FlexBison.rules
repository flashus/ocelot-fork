<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="FlexBison"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="Flex"
			DisplayName="Flex"
			CommandLine="..\bin\flex.exe -+ -o$(InputName).dirty.cpp [Inputs]&#x0D;&#x0A;.\Debug\sanitize.exe $(InputName).cpp $(InputName).dirty.cpp"
			Outputs="$(InputName).cpp"
			FileExtensions="*.lpp"
			ExecutionDescription="Generating lexer for [Inputs]"
			>
			<Properties>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="Bison"
			DisplayName="Bison"
			CommandLine="..\bin\bison.exe [Inputs] -o$(InputName).cpp --defines=$(InputName).h"
			Outputs="$(InputName).cpp $(InputName).h"
			FileExtensions="*.ypp"
			ExecutionDescription="Building $(InputName).cpp and $(InputName).h"
			>
			<Properties>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
